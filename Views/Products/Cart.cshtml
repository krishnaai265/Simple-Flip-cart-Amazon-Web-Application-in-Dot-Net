
@using MVCDatabaseFirstApproach.Models
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Products List</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Product Name</th>
            <th>ProductAddedDate</th>
            <th>ProductPrice</th>
            <th>ProductDescription</th>
            <th>ProductImage</th>
            <th>BrandName</th>
            <th>CategoryName</th>
        </tr>
        @foreach (Item item in (List<Item>)Session["cart"])
        {
            <tr>
                <td><a href="@Url.Action("Remove", "Cart", new { id = item.Product.ProductId })"></a></td>
                <td>@item.Product.ProductId</td>
                <td>@item.Product.ProductName</td>
                <td><img src="@item.Product.ProductImage" width="60" /></td>
                <td>@item.Product.ProductPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.ProductPrice * item.Quantity)</td>
                <td>@Html.ActionLink("Remove", "Remove", new { id = item.Product.ProductId })</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @{
                    List<Item> cart = (List<Item>)Session["cart"];
                    var total = cart.Sum(Item => Item.Product.ProductPrice * Item.Quantity);
                }
                @total

            </td>
        </tr>

    </table>
    <br>
    @Html.ActionLink("Continue", "Index")
    @Html.ActionLink("Pay Now", "Pay")
</body>
</html>
